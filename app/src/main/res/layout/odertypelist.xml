<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <ImageView
    android:id="@+id/singerImageView"
    android:layout_width="100dp"
    android:layout_height="50dp" />

<TextView
    android:id="@+id/songInfoTextView"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:textColor="#DD017F"
    android:textSize="10dp" />

<TextView
    android:id="@+id/singerTextView"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:textColor="#DD017F"
    android:textSize="13dp" />
<!--
 ListView的item中加入Button后 导致ListView对OnItemClick事件无法响应
 原因是因为Button的事件响应优先级高于List Item,所以屏蔽了ListItem的单击事件
 android:focusableInTouchMode="false"
 android:clickable="false"
-->

<Button
    android:id="@+id/deleteSongBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:text="删除"
    android:textColor="#025730" />
<!--@android:color/transparent让按钮变透明-->
<Button
    android:id="@+id/downLoadSongBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:text="下载"
    android:textColor="#025730" />
</LinearLayout>
